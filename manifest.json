{
  "manifest_version": 3,
  "name": "Grammar Fixer with Gemini",
  "version": "2.1",
  "description": "Right-click to fix grammar of selected text using Google's Gemini 2.0 Flash model.",
  "permissions": ["scripting", "contextMenus", "activeTab"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
